<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
  </head>
  <body>
    <h2><%= title %></h2>
    <%- include('partials/error.ejs') %>
    <form action="/item/<%= itemId %>/edit" method="POST">
        <div>
            <label for="name">Product Name:</label>
            <input type="text" id="name" name="name" value="<%= item.name %>" required>
        </div>
        <div>
            <label for="volume_ml">Volume (ml):</label>
            <input type="number" id="volume_ml" name="volume_ml" min="0" value="<%= item.volume_ml %>" required>
        </div>
        <div>
            <label for="description">Description:</label>
            <textarea id="description" name="description"><%= item.description %></textarea>
        </div>
        <div>
            <label for="price">Price ($):</label>
            <input type="number" id="price" name="price" step="0.01" min="0" value="<%= item.price %>" required>
        </div>
        <div>
            <label for="category">Category:</label>
            <input type="text" id="category" name="category" value="<%= item.category %>" required>
        </div>
        <div>
            <label for="in_stock">In Stock:</label>
            <input type="checkbox" id="in_stock" name="in_stock" value="true" <%= item.in_stock ? 'checked' : '' %>>
        </div>
        <div>
            <label for="quantity">Quantity:</label>
            <input type="number" id="quantity" name="quantity" min="0" value="<%= item.quantity %>" required>
        </div>
        <button type="submit">Update Product</button>
    </form>
   </body>
</html>
<%- include('partials/nav') %>